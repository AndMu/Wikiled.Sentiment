<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net462;net471</TargetFrameworks>
    <Authors>Wikiled</Authors>
    <Description>Wikiled Sentiment Analysis library</Description>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <ProjectUrl>https://github.com/AndMu/Wikiled.Sentiment</ProjectUrl>
    <TargetsForTfmSpecificBuildOutput>$(TargetsForTfmSpecificBuildOutput);IncludeP2PAssets</TargetsForTfmSpecificBuildOutput>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>

  <PropertyGroup>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="morelinq" Version="2.10.0" />
    <PackageReference Include="Crc32C.NET" version="1.0.5.0" />
    <PackageReference Include="CsvHelper" version="7.1.0" />
    <PackageReference Include="MSFT.ParallelExtensionsExtras" version="1.2.0" />
    <PackageReference Include="Newtonsoft.Json" version="11.0.2" />
    <PackageReference Include="NLog" version="4.5.0" />
    <PackageReference Include="ParallelExtensionsExtras" version="1.2.0.0" />
    <PackageReference Include="Polly" version="5.8.0" />
    <PackageReference Include="protobuf-net" version="2.3.7" />
    <PackageReference Include="SharpZipLib" version="0.86.0" />
    <PackageReference Include="Snappy.NET" version="1.1.1.8" />
    <PackageReference Include="StackExchange.Redis" version="1.2.6" />
    <PackageReference Include="System.Reactive" version="3.1.1" />
    <PackageReference Include="System.Reactive.Core" version="3.1.1" />
    <PackageReference Include="System.Reactive.Interfaces" version="3.1.1" />
    <PackageReference Include="System.Reactive.Linq" version="3.1.1" />
    <PackageReference Include="System.Reactive.PlatformServices" version="3.1.1" />
    <PackageReference Include="System.Reactive.Windows.Threading" version="3.1.1" />
    <PackageReference Include="System.Threading.Tasks.Extensions" Version="4.4.0" />
    <PackageReference Include="System.ValueTuple" version="4.4.0" />
    <PackageReference Include="Wikiled.Arff" version="2.0.27" />
    <PackageReference Include="Wikiled.Common" Version="1.0.11" />
    <PackageReference Include="Wikiled.MachineLearning" version="2.0.26" />
    <PackageReference Include="Wikiled.OpenNLP" version="1.5.2" />
    <PackageReference Include="Wikiled.Redis" version="3.0.14" />
    <PackageReference Include="Wikiled.Text.Analysis" version="1.5.1" />
    <PackageReference Include="Wikiled.Text.Inquirer" version="1.1.1" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Wikiled.Sentiment.Text\Wikiled.Sentiment.Text.csproj" PrivateAssets="All" />
  </ItemGroup>

  <Target Name="IncludeP2PAssets">
    <ItemGroup>
      <BuildOutputInPackage Include="$(OutputPath)Wikiled.Sentiment.Text.dll" />
      <BuildOutputInPackage Include="$(OutputPath)Wikiled.Sentiment.Text.pdb" />
      <BuildOutputInPackage Include="$(OutputPath)Wikiled.Sentiment.Analysis.pdb" />
    </ItemGroup>
  </Target>

</Project>
