<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>NET472</TargetFramework>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Accord.MachineLearning" Version="3.8.0" />
    <PackageReference Include="Moq" Version="4.10.1" />
    <PackageReference Include="Newtonsoft.Json" version="12.0.1" />
    <PackageReference Include="NLog" version="4.5.11" />
    <PackageReference Include="NUnit" version="3.11.0" />
    <PackageReference Include="Polly" version="6.1.2" />
    <PackageReference Include="protobuf-net" version="2.4.0" />
    <PackageReference Include="StackExchange.Redis" Version="2.0.519" />
    <PackageReference Include="System.Reactive" version="4.1.2" />
    <PackageReference Include="System.Reactive.Core" version="4.1.2" />
    <PackageReference Include="System.Reactive.Interfaces" version="4.1.2" />
    <PackageReference Include="System.Reactive.Linq" version="4.1.2" />
    <PackageReference Include="System.Reactive.PlatformServices" version="4.1.2" />
    <PackageReference Include="System.ValueTuple" version="4.5.0" />
    <PackageReference Include="Wikiled.Arff" version="2.2.12" />
    <PackageReference Include="Wikiled.Redis" version="3.3.0" />
    <PackageReference Include="Wikiled.RedisInside" Version="3.2.101.11" />
    <PackageReference Include="Wikiled.Text.Analysis" version="1.7.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Wikiled.Sentiment.Analysis\Wikiled.Sentiment.Analysis.csproj" />
    <ProjectReference Include="..\Wikiled.Sentiment.TestLogic.Shared\Wikiled.Sentiment.TestLogic.Shared.csproj" />
    <ProjectReference Include="..\Wikiled.Sentiment.Text\Wikiled.Sentiment.Text.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="NLog.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  
  <Target Name="ForceGenerationOfBindingRedirects" AfterTargets="ResolveAssemblyReferences" BeforeTargets="GenerateBindingRedirects" Condition="'$(AutoGenerateBindingRedirects)' == 'true'">
    <PropertyGroup>
      <GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
    </PropertyGroup>
  </Target>

</Project>
