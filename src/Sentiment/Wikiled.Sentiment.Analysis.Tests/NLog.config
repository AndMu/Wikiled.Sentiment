<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log" >
  <variable name="basedir" value="../../../../logs"/>
  <targets async="true">
    <target xsi:type="Console" name="trace" layout="${longdate} [${uppercase:${level}}] [${logger}] ${message}" />
    <target xsi:type="File" name="f" fileName="${basedir}/logs.log"
            layout="${longdate} [${uppercase:${level}}] [${logger}] ${message}" />
  </targets>

  <rules>
    <logger name="*" minlevel="Info" writeTo="trace,f" />
  </rules>
</nlog>